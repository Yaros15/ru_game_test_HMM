package model;

import model.*;

import java.util.ArrayList;
import java.util.Set;

public class Hero {

    private TypesOfCities fraction;                 // Фракция
    private String name;                            // Имя героя
    private int level;                              // Уровень героя
    private Specification specification;            // Специализацяи героя
    private Specification[] basicSpecifications;    // Базовые характеристики героя
    private Warrior[] army;                         // Армия героя
    private int totalMana;                          // Общий объем маны
    private Set<Spell> bookOfSpells;                // Книга заклинаний
    private Artifact[] artifactsOnHero;             // Артефакты на герое
    private ArrayList<Artifact> artifactsInBag;     // Артефакты в сумке
    private Talent[] talent;                        // Таланты героя


}
